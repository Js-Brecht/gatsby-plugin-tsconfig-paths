{{#with comment}}
	{{#if hasVisibleComponent}}
		<div class="tsd-comment tsd-typography">
			{{#if shortText}}
				<div class="lead">
					{{#markdown}}{{{shortText}}}{{/markdown}}
				</div>
			{{/if}}
			{{#if text}}
				{{#markdown}}{{{text}}}{{/markdown}}
			{{/if}}
			{{#if tags}}
				<dl class="tsd-comment-tags">
					{{#each tags}}
						<dt data-tag-name="{{tagName}}">{{tagName}}</dt>
						<dd data-tag-name="{{tagName}}">{{#markdown}}{{{text}}}{{/markdown}}</dd>
					{{/each}}
				</dl>
			{{/if}}
		</div>
	{{/if}}
{{/with}}